<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TrackerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:id="@+id/notifications_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins"
                android:text="Activity Tracker "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/notifications_details"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/details" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            app:cardBackgroundColor="#eaf0ff"
            app:cardCornerRadius="22dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Today Target "
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/blue_linear_background_4">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_baseline_add_24"
                                android:padding="3dp"
                                app:tint="@color/white" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginBottom="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/water_glass"
                                android:layout_width="25dp"
                                android:layout_height="34dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="9dp"
                                android:src="@drawable/glass" />

                            <TextView
                                android:id="@+id/water_glass_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/water_glass"
                                android:layout_marginTop="9dp"
                                android:layout_marginLeft="6dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="8L "
                                android:textColor="#9cc9ff"
                                android:textSize="13sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/water_glass"
                                android:layout_below="@+id/water_glass_count"
                                android:layout_marginLeft="6dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Water Intake "
                                android:textColor="#7B6F72"
                                android:textSize="10sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>






                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginBottom="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/shoe"
                                android:layout_width="25dp"
                                android:layout_height="34dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="9dp"
                                android:src="@drawable/shoe" />

                            <TextView
                                android:id="@+id/shoe_step_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/shoe"
                                android:layout_marginTop="9dp"
                                android:layout_marginLeft="6dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="2400 "
                                android:textColor="#9cc9ff"
                                android:textSize="13sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/shoe"
                                android:layout_below="@+id/shoe_step_count"
                                android:layout_marginLeft="6dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Foot Steps "
                                android:textColor="#7B6F72"
                                android:textSize="10sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>



                </RelativeLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Activity Progress "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="76dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/blue_linear_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    android:text="Weekly "
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:drawableTint="@color/white" />

            </RelativeLayout>

        </RelativeLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="9dp"
            android:rotation="270">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="13dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/round_corner_buttons"
                        android:backgroundTint="#F7F8F8">

                        <SeekBar
                            android:id="@+id/tracker_seekbar_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="0dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="0dp"
                            android:progressBackgroundTint="@android:color/transparent"
                            android:progressDrawable="@drawable/progress_seekbar_3"
                            android:thumbTint="@android:color/transparent" />

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/round_corner_buttons"
                        android:backgroundTint="#F7F8F8">

                        <SeekBar
                            android:id="@+id/tracker_seekbar_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="0dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="0dp"
                            android:progressBackgroundTint="@android:color/transparent"
                            android:progressDrawable="@drawable/progress_seekbar"
                            android:thumbTint="@android:color/transparent" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/round_corner_buttons"
                        android:backgroundTint="#F7F8F8">

                        <SeekBar
                            android:id="@+id/tracker_seekbar_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="0dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="0dp"
                            android:progressBackgroundTint="@android:color/transparent"
                            android:progressDrawable="@drawable/progress_seekbar_3"
                            android:thumbTint="@android:color/transparent" />

                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/round_corner_buttons"
                        android:backgroundTint="#F7F8F8">

                        <SeekBar
                            android:id="@+id/tracker_seekbar_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="0dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="0dp"
                            android:progressBackgroundTint="@android:color/transparent"
                            android:progressDrawable="@drawable/progress_seekbar"
                            android:thumbTint="@android:color/transparent" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/round_corner_buttons"
                        android:backgroundTint="#F7F8F8">

                        <SeekBar
                            android:id="@+id/tracker_seekbar_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="0dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="0dp"
                            android:progressBackgroundTint="@android:color/transparent"
                            android:progressDrawable="@drawable/progress_seekbar_3"
                            android:thumbTint="@android:color/transparent" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/round_corner_buttons"
                        android:backgroundTint="#F7F8F8">

                        <SeekBar
                            android:id="@+id/tracker_seekbar_6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="0dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="0dp"
                            android:progressBackgroundTint="@android:color/transparent"
                            android:progressDrawable="@drawable/progress_seekbar"
                            android:thumbTint="@android:color/transparent" />

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/round_corner_buttons"
                        android:backgroundTint="#F7F8F8">

                        <SeekBar
                            android:id="@+id/tracker_seekbar_7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="0dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="0dp"
                            android:progressBackgroundTint="@android:color/transparent"
                            android:progressDrawable="@drawable/progress_seekbar_3"
                            android:thumbTint="@android:color/transparent" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Latest Activity "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_medium"
                android:text="See more "
                android:textColor="#ADA4A5"
                android:textSize="16sp" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/latest_activity_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />


    </LinearLayout>


</RelativeLayout>