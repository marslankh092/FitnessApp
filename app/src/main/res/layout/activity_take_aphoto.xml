<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TakeAPhotoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="677dp"
        android:background="@drawable/blue_linear_background_3">


        <ImageView
            android:layout_width="171dp"
            android:layout_height="489dp"
            android:src="@drawable/takeaphoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp" />



        <RelativeLayout
            android:layout_width="295dp"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/takeaphotooptions"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/zap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp" />




            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_camera"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp" />


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:src="@drawable/takephotobutton" />


        </RelativeLayout>


    </RelativeLayout>
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="46dp">


        <androidx.cardview.widget.CardView
            android:layout_width="67.5dp"
            android:layout_height="65dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="#F7F8F8"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="9dp"
                android:src="@drawable/frontavatar" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="67.5dp"
            android:layout_height="65dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="#fcfbfb"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="9dp"
                android:src="@drawable/leftavatar" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="67.5dp"
            android:layout_height="65dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="#fcfbfb"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="9dp"
                android:src="@drawable/backavatar" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="67.5dp"
            android:layout_height="65dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="#fcfbfb"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="9dp"
                android:src="@drawable/rightavatar" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</RelativeLayout>