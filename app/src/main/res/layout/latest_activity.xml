<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="9dp"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/latest_activity_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:src="@drawable/latestactivityimage" />

        <TextView
            android:id="@+id/latest_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/latest_activity_image"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Drinking 300ml Water "
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/latest_activity_image"
            android:layout_below="@+id/latest_activity_name"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/poppins_medium"
            android:text="About 3 minutes ago "
            android:textColor="#A4A9AD"
            android:textSize="10sp" />



        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:tint="#ADA4A5" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>