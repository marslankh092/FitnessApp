<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProgressPhotoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:id="@+id/progress_photo_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins"
                android:text="Progress Photo "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/progress_photo_details"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/details" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">





                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#ffe5e5"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/progress_calendar_1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/calendar1"
                            android:layout_marginLeft="13dp" />

                        <TextView
                            android:id="@+id/progress_reminder_text_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/progress_calendar_1"
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="9dp"
                            android:fontFamily="@font/poppins"
                            android:text="Reminder! "
                            android:textColor="#FF0000"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/progress_calendar_1"
                            android:layout_below="@+id/progress_reminder_text_1"
                            android:layout_marginLeft="9dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Next Photos Fall On July 08 "
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="13dp"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/ic_baseline_close_24"
                            app:tint="#7B6F72" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="137dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    app:cardBackgroundColor="#eaf1ff"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="116dp"
                            android:layout_height="76dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="13dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/learnmore" />

                        <TextView
                            android:id="@+id/learn_more_text_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="22dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Track Your Progress Each "
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/learn_more_text_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/learn_more_text_1"
                            android:layout_marginLeft="13dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Month With "
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/learn_more_text_1"
                            android:layout_toRightOf="@+id/learn_more_text_2"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Photo "
                            android:textColor="#9cc9ff"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:id="@+id/lear_more_buttons"
                            android:layout_width="95dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/learn_more_text_2"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="13dp"
                            android:background="@drawable/learnmorebutton" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:text="Learn More "
                                android:textColor="@color/white"
                                android:textSize="9sp" />


                        </RelativeLayout>



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    app:cardBackgroundColor="#eaf1ff"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="13dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Compare my Photo "
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:id="@+id/compare_buttons"
                            android:layout_width="88dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="13dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/comparebutton">





                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:fontFamily="@font/poppins"
                                android:text="Compare "
                                android:textColor="@color/white"
                                android:textSize="10sp" />


                        </RelativeLayout>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Gallery "
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/poppins"
                        android:text="See more "
                        android:textColor="#ADA4A5"
                        android:textSize="16sp" />

                </RelativeLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:fontFamily="@font/poppins"
                    android:text="2 June "
                    android:textColor="#7B6F72"
                    android:textSize="16sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/progress_gallery_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/progess_gallery_camera_button" />


</RelativeLayout>