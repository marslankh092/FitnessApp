<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CompareResult1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:id="@+id/compare_1_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins"
                android:text="Result "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />



            <ImageView
                android:id="@+id/compare_1_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toLeftOf="@+id/compare_1_details"
                android:layout_marginRight="13dp"
                android:src="@drawable/share" />


            <ImageView
                android:id="@+id/compare_1_details"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/details" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            app:cardBackgroundColor="#F7F8F8"
            app:cardCornerRadius="99dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/photo_background"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blue_linear_background"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Photo "
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/statistic_background"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Statistic "
                    android:textColor="#ADA4A5"
                    android:textSize="16sp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Average Progress "
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Good "
                        android:textColor="#42D742"
                        android:textSize="16sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/round_corner_buttons"
                    android:backgroundTint="#F7F8F8">

                    <SeekBar
                        android:id="@+id/progress_seekbar_1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingStart="0dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="0dp"
                        android:progressBackgroundTint="@android:color/transparent"
                        android:progressDrawable="@drawable/progress_seekbar"
                        android:thumbTint="@android:color/transparent" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="62% "
                        android:textColor="@color/white"
                        android:textSize="13sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="May "
                        android:textColor="#7B6F72"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="June "
                        android:textColor="#7B6F72"
                        android:textSize="18sp" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Front Facing "
                    android:textColor="#7B6F72"
                    android:textSize="18sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/front_facing_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Back Facing "
                    android:textColor="#7B6F72"
                    android:textSize="18sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/back_facing_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Left Facing "
                    android:textColor="#7B6F72"
                    android:textSize="18sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/left_facing_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Right Facing "
                    android:textColor="#7B6F72"
                    android:textSize="18sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/right_facing_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />



            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/blue_linear_background"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:text="Back to Home "
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>

