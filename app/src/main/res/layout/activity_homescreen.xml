<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomescreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp">



            <TextView
                android:id="@+id/home_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Welcome Back, "
                android:textColor="#ADA4A5"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_text_1"
                android:fontFamily="@font/poppins_bold"
                android:text="Stefani Wong "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                app:cardBackgroundColor="#F7F8F8"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@drawable/notification"
                        android:padding="9dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">


               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="146dp"
                   android:layout_marginTop="22dp"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   app:cardBackgroundColor="@color/white"
                   app:cardCornerRadius="22dp"
                   app:cardElevation="3dp">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@drawable/blue_linear_background_4">

                       <ImageView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@drawable/homebackground" />

                       <TextView
                           android:id="@+id/home_text_2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="13dp"
                           android:layout_marginLeft="13dp"
                           android:fontFamily="@font/poppins_semibold"
                           android:text="BMI (Body Mass Index) "
                           android:textColor="@color/white"
                           android:textSize="16sp" />


                       <TextView
                           android:id="@+id/home_text_3"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/home_text_2"
                           android:layout_marginTop="3dp"
                           android:layout_marginLeft="13dp"
                           android:fontFamily="@font/poppins"
                           android:text="You have a normal weight "
                           android:textColor="@color/white"
                           android:textSize="13sp" />

                       <RelativeLayout
                           android:layout_width="95dp"
                           android:layout_height="35dp"
                           android:layout_below="@+id/home_text_3"
                           android:layout_marginTop="13dp"
                           android:layout_marginLeft="13dp"
                           android:background="@drawable/purple_linear_background">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerInParent="true"
                               android:fontFamily="@font/poppins_semibold"
                               android:text="View More "
                               android:textColor="@color/white"
                               android:textSize="13sp" />


                       </RelativeLayout>


                       <com.razerdp.widget.animatedpieview.AnimatedPieView
                           android:id="@+id/home_pie_chart_1"
                           android:layout_width="106dp"
                           android:layout_height="106dp"
                           android:layout_alignParentRight="true"
                           android:layout_marginTop="13dp"
                           android:layout_marginRight="13dp" />

                   </RelativeLayout>

               </androidx.cardview.widget.CardView>



               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="57dp"
                   android:layout_marginTop="30dp"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   app:cardBackgroundColor="#eaf0ff"
                   app:cardCornerRadius="16dp"
                   app:cardElevation="3dp">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">


                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="13dp"
                           android:fontFamily="@font/poppins_medium"
                           android:text="Today Target "
                           android:textColor="@color/black"
                           android:textSize="16sp" />

                       <RelativeLayout
                           android:layout_width="68dp"
                           android:layout_height="28dp"
                           android:layout_alignParentRight="true"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="13dp"
                           android:background="@drawable/blue_linear_background">


                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerInParent="true"
                               android:fontFamily="@font/poppins"
                               android:text="Check "
                               android:textColor="@color/white"
                               android:textSize="13sp" />

                       </RelativeLayout>

                   </RelativeLayout>

               </androidx.cardview.widget.CardView>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="22dp"
                   android:layout_marginLeft="13dp"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Activity Status "
                   android:textColor="@color/black"
                   android:textSize="18sp" />

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:layout_marginTop="22dp"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   app:cardBackgroundColor="#eaf0ff"
                   app:cardCornerRadius="20dp"
                   app:cardElevation="3dp">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">


                       <TextView
                           android:id="@+id/home_text_4"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="13dp"
                           android:layout_marginTop="13dp"
                           android:fontFamily="@font/poppins_medium"
                           android:text="Heart Rate "
                           android:textColor="@color/black"
                           android:textSize="16sp" />

                       <TextView
                           android:id="@+id/home_text_5"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/home_text_4"
                           android:layout_marginLeft="13dp"
                           android:layout_marginTop="3dp"
                           android:fontFamily="@font/poppins_semibold"
                           android:text="78 BPM "
                           android:textColor="#93a7fd"
                           android:textSize="13sp" />


                       <com.jjoe64.graphview.GraphView
                           android:id="@+id/graph"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_below="@+id/home_text_5"
                           android:layout_alignParentBottom="true" />


                       <RelativeLayout
                           android:layout_width="73dp"
                           android:layout_height="25dp"
                           android:layout_below="@+id/home_text_4"
                           android:layout_marginLeft="100dp"
                           android:layout_toRightOf="@+id/home_text_5"
                           android:background="@drawable/purple_linear_background">


                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerInParent="true"
                               android:fontFamily="@font/poppins"
                               android:text="3mins ago "
                               android:textColor="@color/white"
                               android:textSize="9sp" />

                       </RelativeLayout>


                   </RelativeLayout>

               </androidx.cardview.widget.CardView>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="13dp"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp">



                   <androidx.cardview.widget.CardView
                       android:id="@+id/sleep_card"
                       android:layout_width="150dp"
                       android:layout_height="150dp"
                       android:layout_marginTop="3dp"
                       android:layout_marginRight="1dp"
                       android:layout_marginBottom="3dp"
                       android:layout_alignParentRight="true"
                       app:cardBackgroundColor="@color/white"
                       app:cardCornerRadius="20dp"
                       app:cardElevation="3dp">

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">


                           <TextView
                               android:id="@+id/home_text_6"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="9dp"
                               android:layout_marginLeft="9dp"
                               android:fontFamily="@font/poppins_medium"
                               android:text="Sleep "
                               android:textColor="@color/black"
                               android:textSize="13sp" />

                           <TextView
                               android:id="@+id/home_text_7"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_below="@+id/home_text_6"
                               android:layout_marginTop="3dp"
                               android:layout_marginLeft="9dp"
                               android:fontFamily="@font/poppins_semibold"
                               android:text="8h 20m "
                               android:textColor="#93a7fd"
                               android:textSize="16sp" />
                           
                           
                           <ImageView
                               android:layout_width="110dp"
                               android:layout_height="78dp"
                               android:layout_alignParentBottom="true"
                               android:layout_centerHorizontal="true"
                               android:src="@drawable/sleep" />



                           <ImageView
                               android:layout_width="110dp"
                               android:layout_height="78dp"
                               android:layout_alignParentBottom="true"
                               android:layout_centerHorizontal="true"
                               android:src="@drawable/sleep1" />


                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>


                   <androidx.cardview.widget.CardView
                       android:layout_width="150dp"
                       android:layout_height="150dp"
                       android:layout_below="@+id/sleep_card"
                       android:layout_marginTop="13dp"
                       android:layout_marginRight="1dp"
                       android:layout_marginBottom="3dp"
                       android:layout_alignParentRight="true"
                       app:cardBackgroundColor="@color/white"
                       app:cardCornerRadius="20dp"
                       app:cardElevation="3dp">

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">


                           <TextView
                               android:id="@+id/home_text_8"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="9dp"
                               android:layout_marginLeft="9dp"
                               android:fontFamily="@font/poppins_medium"
                               android:text="Calories "
                               android:textColor="@color/black"
                               android:textSize="13sp" />

                           <TextView
                               android:id="@+id/home_text_9"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_below="@+id/home_text_8"
                               android:layout_marginTop="3dp"
                               android:layout_marginLeft="9dp"
                               android:fontFamily="@font/poppins_semibold"
                               android:text="760 kCal "
                               android:textColor="#93a7fd"
                               android:textSize="16sp" />


                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="100dp"
                               android:layout_alignParentBottom="true"
                               android:layout_centerInParent="true">

                               <ProgressBar
                                   android:id="@+id/calories_progress_bar"
                                   style="?android:attr/progressBarStyleHorizontal"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:indeterminate="false"
                                   android:max="100"
                                   android:progress="50"
                                   android:progressDrawable="@drawable/round_progess_bar"
                                   android:secondaryProgress="100" />

                               <RelativeLayout
                                   android:layout_width="40dp"
                                   android:layout_height="40dp"
                                   android:layout_centerInParent="true"
                                   android:background="@drawable/oval_blue_linear_background">

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerInParent="true"
                                       android:gravity="center"
                                       android:fontFamily="@font/poppins"
                                       android:text="230kCal\nleft "
                                       android:textColor="@color/white"
                                       android:textSize="6sp" />

                               </RelativeLayout>


                           </RelativeLayout>


                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>


               </RelativeLayout>



               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="30dp"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp">


                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:fontFamily="@font/poppins_semibold"
                       android:text="Workout Progress "
                       android:textColor="@color/black"
                       android:textSize="16sp" />

                   <RelativeLayout
                       android:layout_width="76dp"
                       android:layout_height="30dp"
                       android:layout_alignParentRight="true"
                       android:background="@drawable/blue_linear_background">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerInParent="true"
                           android:gravity="center"
                           android:fontFamily="@font/poppins"
                           android:text="Weekly "
                           android:textColor="@color/white"
                           android:textSize="10sp"
                           android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                           android:drawableTint="@color/white" />

                   </RelativeLayout>

               </RelativeLayout>


               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="13dp">


                   <com.github.mikephil.charting.charts.LineChart
                       android:id="@+id/progress_chart_1"
                       android:layout_width="match_parent"
                       android:layout_height="172dp"
                       android:layout_marginLeft="13dp"
                       android:layout_marginTop="22dp"
                       android:layout_marginRight="13dp" />



                   <androidx.cardview.widget.CardView
                       android:layout_width="130dp"
                       android:layout_height="58dp"
                       android:layout_marginTop="22dp"
                       android:layout_centerHorizontal="true"
                       app:cardBackgroundColor="@color/white"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="3dp">


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical">


                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">


                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginTop="9dp"
                                   android:layout_marginLeft="13dp"
                                   android:fontFamily="@font/poppins"
                                   android:text="Fri, 28 May "
                                   android:textColor="#ADA4A5"
                                   android:textSize="9sp" />

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginTop="9dp"
                                   android:layout_alignParentRight="true"
                                   android:layout_marginRight="13dp"
                                   android:fontFamily="@font/poppins"
                                   android:text="90% "
                                   android:textColor="#42D742"
                                   android:textSize="9sp"
                                   android:drawableRight="@drawable/ic_baseline_arrow_upward_24"
                                   android:drawableTint="#42D742"
                                   android:drawablePadding="3dp" />


                           </RelativeLayout>



                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="13dp"
                               android:fontFamily="@font/poppins"
                               android:text="Upperbody Workout "
                               android:textColor="#7B6F72"
                               android:textSize="10sp" />


                           <RelativeLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="3dp"
                               android:layout_marginLeft="13dp"
                               android:layout_marginRight="13dp"
                               android:background="@drawable/round_corner_buttons"
                               android:backgroundTint="#F7F8F8">

                               <SeekBar
                                   android:id="@+id/progress_seekbar_3"
                                   android:layout_width="match_parent"
                                   android:layout_height="5dp"
                                   android:paddingStart="0dp"
                                   android:paddingTop="0dp"
                                   android:paddingEnd="0dp"
                                   android:paddingBottom="0dp"
                                   android:progressBackgroundTint="@android:color/transparent"
                                   android:progressDrawable="@drawable/progress_seekbar"
                                   android:thumbTint="@android:color/transparent" />



                           </RelativeLayout>


                       </LinearLayout>

                   </androidx.cardview.widget.CardView>


               </RelativeLayout>


               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="30dp"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:fontFamily="@font/poppins_semibold"
                       android:text="Latest Workout "
                       android:textColor="@color/black"
                       android:textSize="18sp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:fontFamily="@font/poppins"
                       android:text="See more "
                       android:textColor="#ADA4A5"
                       android:textSize="16sp" />

               </RelativeLayout>


           </LinearLayout>

        </ScrollView>

    </LinearLayout>






    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="9dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/search1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/home_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/homes" />

            <ImageView
                android:id="@+id/activity_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/home_1"
                android:src="@drawable/activity" />

            <ImageView
                android:id="@+id/camera_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="22dp"
                android:layout_toLeftOf="@+id/profile_1"
                android:layout_marginRight="22dp"
                android:src="@drawable/camera" />

            <ImageView
                android:id="@+id/profile_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="22dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:src="@drawable/profiles1" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>


