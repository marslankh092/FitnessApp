<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <padding
                android:bottom="2dip"
                android:left="2dip"
                android:right="2dip"
                android:top="2dip" />
            <corners android:radius="99dp" />
            <gradient
                android:type="linear"
                android:centerY="0.50"
                android:startColor="#9c9ffc"
                android:endColor="#c18ef3" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="99dp" />
                <gradient
                    android:type="linear"
                    android:startColor="#9c9ffc"
                    android:endColor="#c18ef3" />
            </shape>
        </clip>
    </item>
</layer-list>
















